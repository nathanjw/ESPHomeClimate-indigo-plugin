<?xml version="1.0"?>
<Devices>
  <Device type="thermostat"
	  id="espClimate">
    <Name>ESPHome Climate Device</Name>
    <ConfigUI>
      <Field id="address"
	     type="textfield">
	<Label>Device address:</Label>
      </Field>
      <Field id="port"
	     type="textfield"
	     defaultValue="6053">
	<Label>ESPHome API port:</Label>
      </Field>
      <Field id="psk"
	     type="textfield">
	<Label>Encryption key:</Label>
      </Field>
      <Field id="password"
	     type="textfield">
	<Label>Password:</Label>
      </Field>
      <Field id="passwordLabel"
	     type="label">
	<Label>Note: Passwords are deprecated and encryption keys are preferred</Label>
      </Field>
    </ConfigUI>
    <States>
      <State id="fanMode">
	<ValueType>
	  <List>
	    <Option value="off">Off</Option>
	    <Option value="focus">Focus</Option>
	    <Option value="diffuse">Diffuse</Option>
	    <Option value="quiet">Quiet</Option>
	    <Option value="auto">Auto</Option>
	    <Option value="low">Low</Option>
	    <Option value="medium">Medium</Option>
	    <Option value="middle">Middle</Option>
	    <Option value="high">High</Option>
	    <Option value="on">On</Option>
	  </List>
	</ValueType>
	<TriggerLabel>Fan Mode Changed</TriggerLabel>
	<TriggerLabelPrefix>Fan Mode Changed to</TriggerLabelPrefix>
	<ControlPageLabel>Current Fan Mode</ControlPageLabel>
      </State>
    </States>
    <!-- TODO(njw):
	 * handle heat/cool setpoints being the same
	 * add the fan speed state
	 * add the vane direction state
	 * cope with the additional "dry" mode
    -->
  </Device>
</Devices>
