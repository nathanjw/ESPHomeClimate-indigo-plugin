<?xml version="1.0"?>
<Actions>
  <Action id="setFanSpeed"
	  deviceFilter="self"
	  uiPath="DeviceActions">
    <Name>Set Fan Speed</Name>
    <CallbackMethod>setFanSpeed</CallbackMethod>
    <ConfigUI>
      <Field id="newFanSpeed"
	     type="menu">
	<Label>Fan Speed</Label>
	<List class="self" method="getSupportedFanSpeeds"/>
      </Field>
    </ConfigUI>
  </Action>
  <Action id="setVaneSwingMode"
	  deviceFilter="self"
	  uiPath="DeviceActions">
    <Name>Set Vane Swing Mode</Name>
    <CallbackMethod>setVaneSwingMode</CallbackMethod>
    <ConfigUI>
      <Field id="newVaneSwingMode"
	     type="menu">
	<Label>Vane Swing Mode</Label>
	<List class="self" method="getSupportedVaneSwingModes"/>
      </Field>
    </ConfigUI>
  </Action>
</Actions>
