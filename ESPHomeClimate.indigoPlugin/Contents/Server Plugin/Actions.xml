<?xml version="1.0"?>
<Actions>
  <Action id="setFanSpeed"
	  deviceFilter="self"
	  uiPath="DeviceActions">
    <Name>Set Fan Speed</Name>
    <CallbackMethod>setFanSpeed</CallbackMethod>
    <ConfigUI>
      <Field id="newFanSpeed"
	     type="menu">
	<Label>Fan Speed</Label>
	<List class="self" method="getSupportedFanSpeeds"/>
      </Field>
    </ConfigUI>
  </Action>
  <Action id="setVerticalVaneMode"
	  deviceFilter="self"
	  uiPath="DeviceActions">
    <Name>Set Vertical Vane Mode</Name>
    <CallbackMethod>setVerticalVaneMode</CallbackMethod>
    <ConfigUI>
      <Field id="newVerticalVaneMode"
	     type="menu">
	<Label>Vertical Vane Mode</Label>
	<List class="self" method="getVerticalVaneModes"/>
      </Field>
    </ConfigUI>
  </Action>
</Actions>
